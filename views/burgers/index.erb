<h2>Burgers</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Calories</th>
      <th>Vendor</th>
    </tr>
  </thead>
  <tbody>
    <% for burger in @burgers %>
    <tr>
      <td>
      <a href="burgers/<%= burger.id %>"><%= burger.name %></a>
      </td>
      <td><%= burger.price %></td>
      <td><%= burger.calories %></td>
      <td><%= burger.get_vendor_name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<a href = "/burgers/new">Add a new burger</a>